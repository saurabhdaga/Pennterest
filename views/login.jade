!!! transitional
html(xmlns='http://www.w3.org/1999/xhtml')
head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    title Pennterest
    link(rel='stylesheet', type='text/css', href='stylesheets/login.css')
  body
    #wrapper
      h1 Pennterest
      #container
        section.tabs
          input#tab-1.tab-selector-1(type='radio', name='radio-set', checked='checked')
          span.tab-label-1(for='tab-1') Signup
          input#tab-2.tab-selector-2(type='radio', name='radio-set')
          span.tab-label-2(for='tab-2') Login
          .clear-shadow
          #content
            .content-1
              form(action='', autocomplete='on')
                p
                  label.uname(for='usernamesignup', data-icon='u') Your username
                  input.field(name='usernamesignup', required='required', type='text', placeholder='myusername')
                p
                  label.youmail(for='emailsignup', data-icon='e')  Your email
                  input.field(name='emailsignup', required='required', type='email', placeholder='myusername@gmail.com')
                p
                  label.youpasswd(for='passwordsignup', data-icon='p') Your password 
                  input.field(name='passwordsignup', required='required', type='password', placeholder='mypassword')
                p
                  label.youpasswd(for='passwordsignup_confirm', data-icon='p') Please confirm your password 
                  input.field(name='passwordsignup_confirm', required='required', type='password', placeholder='mypassword')
                p.signin.button
                  input(type='checkbox', required='required')
                  | I agree with terms and conditions
                  input(type='submit', value='Sign up')
            .content-2
              form(action='', autocomplete='on')
                p
                  label.uname(for='username', data-icon='u')  Your email or username 
                  input.field(name='username', required='required', type='text', placeholder='myusername or myusername@gmail.com')
                p
                  label.youpasswd(for='password', data-icon='p')  Your password 
                  input.field(name='password', required='required', type='password', placeholder='mypassword')
                p.keeplogin
                  input(type='submit', value='Login')
